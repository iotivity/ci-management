{
  "variables": {
    "cloud_tenant": null,
    "cloud_user": null,
    "cloud_pass": null,
    "cloud_network": null,
    "base_image": null,
    "ssh_user": null,
    "distro": null,
    "cloud_user_data": null
  },
  "builders": [
    {
      "type": "openstack",
      "identity_endpoint": "https://auth.vexxhost.net/v2.0/",
      "tenant_name": "{{user `cloud_tenant`}}",
      "username": "{{user `cloud_user`}}",
      "password": "{{user `cloud_pass`}}",
      "region": "ca-ymq-1",
      "ssh_username": "{{user `ssh_user`}}",
      "image_name": "{{user `distro`}} - baseline - {{isotime \"20060102-150405.000\"}}",
      "instance_name": "{{user `distro`}}-baseline-{{uuid}}",
      "source_image_name": "{{user `base_image`}}",
      "flavor": "v1-standard-1",
      "availability_zone": "ca-ymq-2",
      "networks": [
        "{{user `cloud_network`}}"
      ],
      "user_data_file": "{{user `cloud_user_data`}}"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "scripts": [

        "provision/sshd.sh",
        "provision/packages.sh",
        "provision/shared-dependencies.sh",
        "provision/android.sh",
        "provision/tizen.sh",
        "provision/baseline.sh",
        "provision/cleanup.sh",
        "provision/system_reseal_local_env.sh"
      ],
      "execute_command": "chmod +x {{ .Path }}; if [ \"$UID\" == \"0\" ]; then {{ .Vars }} '{{ .Path }}'; else {{ .Vars }} sudo -E '{{ .Path }}'; fi"
    }
  ]
}
