{
  "variables": {
    "stack_tenant": null,
    "stack_user": null,
    "stack_pass": null,
    "stack_network": null,

    "base_image": null,
    "cloud_user": null,
    "distro": null,
    "cloud_user_data": null,
    "arch": null,
  },
  "builders": [
    {
      "type": "openstack",
      "identity_endpoint": "https://auth.vexxhost.net/v2.0/",
      "tenant_name": "{{user `stack_tenant`}}",
      "username": "{{user `stack_user`}}",
      "password": "{{user `stack_pass`}}",
      "region": "ca-ymq-1",
      "ssh_username": "{{user `cloud_user`}}",
      "image_name": "{{user `distro`}} - basebuild - {{isotime \"20060102-1504\"}}",
      "source_image_name": "{{user `base_image`}}",
      "flavor": "v1-standard-1",
      "availability_zone": "ca-ymq-2",
      "networks": [
        "{{user `stack_network`}}"
      ],
      "user_data_file": "{{user `cloud_user_data`}}"
    }
  ],
  "provisioners": [
    {
      "type": "windows-shell",
      "inline": ["mkdir c:\\packer"]
    },
    {
      "type": "file",
      "source": "provision/basebuild/",
      "destination": "c:\\packer"
    },
    {
      "type": "powershell",
      "inline": [
	  "Set-ExecutionPolicy -ExecutionPolicy Bypass -Force; & C:\\packer\\install-chocolatey.ps1",
	  "net user {{ user `admin_username`}} {{ user `admin_password`}} /add",
	  "net localgroup administrators {{ user `admin_username`}} /add",
	  "net user {{ user `jenkins_username`}} {{ user `jenkins_password`}} /add",
      ]
    },
    {
      "type": "windows-restart"
    },
    {
      "type": "windows-shell",
      "scripts": [
	"provision/basebuild/install-python-pkgs-{{ user `arch`}}.ps1",
        "provision/baseline.ps1",
        "provision/basebuild/fixnetwork.ps1",
        "provision/basebuild/firewall-disable.bat",
        "provision/basebuild/install-winrm.cmd",
      ]
    },
    {
      "type": "shell",
      "scripts": [
        "provision/basebuild/install-cygwin-sshd.sh"
      ]
    },
    {
      "type": "windows-shell",
      "scripts": [
        "provision/basebuild/zz-start-sshd.cmd"
      ]
    },
    {
      "type": "shell",
      "scripts": [
        "provision/system_reseal.sh"
      ]
    },
    {
      "execute_command": "chmod +x {{ .Path }}; if [ \"$UID\" == \"0\" ]; then {{ .Vars }} '{{ .Path }}'; else {{ .Vars }} sudo -E '{{ .Path }}'; fi"
    }
  ]
}
