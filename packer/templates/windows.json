{
  "variables": {
    "cloud_auth_url": null,
    "cloud_tenant": null,
    "cloud_user": null,
    "cloud_pass": null,
    "cloud_network": null,
    "base_image": null,
    "ssh_user": null,
    "distro": null,
    "cloud_user_data": null,
    "toolchain": "vs2013"
  },
  "builders": [
    {
      "type": "openstack",
      "identity_endpoint": "{{user `cloud_auth_url`}}",
      "domain_name": "Default",
      "tenant_name": "{{user `cloud_tenant`}}",
      "username": "{{user `cloud_user`}}",
      "password": "{{user `cloud_pass`}}",
      "region": "ca-ymq-1",
      "ssh_username": "{{user `ssh_user`}}",
      "image_name": "ZZCI - {{user `distro`}} - {{user `toolchain`}} - {{isotime \"20060102-150405.000\"}}",
      "instance_name": "{{user `distro`}}-windows-{{uuid}}",
      "source_image_name": "{{user `base_image`}}",
      "flavor": "v1-standard-4",
      "availability_zone": "ca-ymq-2",
      "communicator": "winrm",
      "winrm_timeout": "10000s",
      "winrm_username": "Administrator",
      "winrm_password": "W!nRMB00tStrap.",
      "networks": [
        "{{user `cloud_network`}}"
      ],
      "user_data_file": "{{user `cloud_user_data`}}"
    }
  ],
  "provisioners": [
    { "type": "file",
      "source": "provision/basebuild/",
      "destination": "c:\\packer"
    },
    { "type": "powershell",
      "scripts": [
	  "provision/resize_partition.ps1"
      ]
    },
    { "type": "windows-shell",
      "scripts": [
        "provision/basebuild/win-prep.bat"
      ]
    },
    { "type": "windows-restart" },
    {
      "type": "powershell",
      "inline": ["Set-Item -Path WSMan:\\localhost\\Service\\Auth\\Basic -Value $true"]
    },
    {
      "type": "ansible",
      "playbook_file": "provision/local-windows.yaml",
      "ansible_env_vars": [ "ANSIBLE_HOST_KEY_CHECKING=False" ],
      "extra_arguments": [
        "-vvvv",
        "--extra-vars",
        "instance_name={{user `distro`}}-windows-{{uuid}} ansible_shell_type=powershell ansible_shell_executable=powershell os_type=Windows"
      ]
    },
    { "type": "powershell",
      "inline": [
        "choco install -y puppet-agent"
      ]
    },
    { "type": "windows-restart" },
    { "type": "powershell",
      "inline": [
        "puppet module install chocolatey-chocolatey",
        "puppet module install puppetlabs-dsc",
        "puppet module install noma4i-windows_updates",
        "puppet module install puppetlabs-reboot"
      ]
    },
    { "type": "powershell",
      "valid_exit_codes": [0, 3010],
      "inline": [ "puppet apply C:\\packer\\iotivity-build-minion.pp" ]
    },
    { "type": "powershell",
      "scripts": [
	  "provision/basebuild.ps1"
      ]
    },
    { "type": "powershell",
      "valid_exit_codes": [0, 3010],
      "scripts": [
	  "provision/basebuild/install-{{user `toolchain`}}.ps1"
      ]
    },
    { "type": "windows-restart" },
    { "type": "powershell",
      "scripts": [
	  "provision/basebuild/system_reseal.ps1"
      ]
    }
  ]
}
