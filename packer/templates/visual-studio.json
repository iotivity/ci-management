{
  "variables": {
    "cloud_auth_url": null,
    "cloud_tenant": null,
    "cloud_user": null,
    "cloud_pass": null,
    "cloud_network": null,
    "base_image": null,
    "ssh_user": null,
    "distro": null,
    "cloud_user_data": null,
    "toolchain": "vs2013"
  },
  "builders": [
    {
      "type": "openstack",
      "identity_endpoint": "{{user `cloud_auth_url`}}",
      "domain_name": "Default",
      "tenant_name": "{{user `cloud_tenant`}}",
      "username": "{{user `cloud_user`}}",
      "password": "{{user `cloud_pass`}}",
      "region": "ca-ymq-1",
      "ssh_username": "{{user `ssh_user`}}",
      "image_name": "{{user `distro`}} - {{user `toolchain`}} - {{isotime \"20060102-1504\"}}",
      "source_image_name": "{{user `base_image`}}",
      "flavor": "v1-performance-4",
      "availability_zone": "ca-ymq-2",
      "communicator": "winrm",
      "winrm_timeout": "10000s",
      "winrm_username": "admin",
      "networks": [
        "{{user `cloud_network`}}"
      ],
      "user_data_file": "{{user `cloud_user_data`}}"
    }
  ],
  "provisioners": [
    { "type": "powershell",
      "valid_exit_codes": [0, 3010],
      "scripts": [
	  "provision/basebuild/install-{{user `toolchain`}}.ps1"
      ]
    },
    { "type": "windows-restart" },
    { "type": "powershell",
      "scripts": [
	  "provision/basebuild/system_reseal.ps1"
      ]
    }

  ]
}
