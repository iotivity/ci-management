{
  "variables": {
    "stack_tenant": null,
    "stack_user": null,
    "stack_pass": null,
    "stack_network": null,
    "base_image": null,
    "cloud_user": null,
    "distro": null,
    "cloud_user_data": null,
    "winrm_username": null,
    "winrm_username": null,
    "jenkins_username": null,
    "jenkins_username": null,
    "admin_username": null,
    "admin_username": null,
    "arch": null

  },
  "builders": [
    {
      "type": "openstack",
      "identity_endpoint": "https://auth.vexxhost.net/v2.0/",
      "tenant_name": "{{user `stack_tenant`}}",
      "username": "{{user `stack_user`}}",
      "password": "{{user `stack_pass`}}",
      "region": "ca-ymq-1",
      "ssh_username": "{{user `cloud_user`}}",
      "image_name": "{{user `distro`}} - baseline - {{isotime \"20060102-1504\"}}",
      "source_image_name": "{{user `base_image`}}",
      "flavor": "v1-standard-1",
      "availability_zone": "ca-ymq-2",
      "communicator": "winrm",
      "winrm_timeout": "10000s",
      "winrm_username": "{{user `winrm_username`}}",
      "winrm_password": "{{user `winrm_password`}}",
      "networks": [
        "{{user `stack_network`}}"
      ],
      "user_data_file": "{{user `cloud_user_data`}}"
    }
  ],
  "provisioners": [
    { "type": "powershell",
      "inline": [ "Remove-Item C:\\packer -recurse" ]
    },
    { "type": "file",
      "source": "provision/basebuild/",
      "destination": "c:\\packer"
    },
    { "type": "powershell",
      "inline": [ "puppet apply C:\\packer\\iotivity-build-minion.pp" ]
    },
    { "type": "windows-restart" },
    { "type": "powershell", "inline": [ "Start-Sleep -s 240" ] },
    { "type": "windows-restart" },
    { "type": "powershell",
      "scripts": [
	  "provision/basebuild/install-python-pkgs-{{ user `arch`}}.ps1",
	  "provision/baseline.ps1"
      ]
    },
    { "type": "windows-restart" },
    { "type": "powershell",
      "valid_exit_codes": [0, 3010],
      "elevated_user": "{{ user `winrm_username` }}",
      "elevated_password": "{{ user `winrm_password` }}",
      "scripts": [
	  "provision/basebuild/install-vs2015-{{ user `arch`}}.ps1"
      ]
    },
    { "type": "windows-restart" },
    { "type": "powershell",
      "inline": [ "puppet apply C:\\packer\\iotivity-build-minion.pp" ]
    },
    { "type": "windows-restart" },
    { "type": "powershell", "inline": [ "Start-Sleep -s 240" ] },
    { "type": "windows-restart" },
    { "type": "powershell",
      "valid_exit_codes": [0, 3010],
      "elevated_user": "{{ user `winrm_username` }}",
      "elevated_password": "{{ user `winrm_password` }}",
      "scripts": [
	  "provision/basebuild/install-vs2015-{{ user `arch`}}.ps1"
      ]
    },
    { "type": "windows-restart" },
    { "type": "powershell",
      "scripts": [
	  "provision/basebuild/system_reseal.ps1"
      ]
    }

  ]
}
