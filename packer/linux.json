{
  "builders": [
    {
      "type": "docker",
      "image": "ubuntu:12.04",
      "commit": "true"
    },
    {
      "type": "googlecompute",
      "project_id": "gce-iotivity-ci",
      "source_image": "ubuntu-1204-precise-v20161020",
      "zone": "us-central1-a",
      "machine_type": "n1-standard-4",
      "network": "gce-iotivity",
      "disk_size": "110",
      "image_name": "gce-iotivity-build-{{uuid}}"
    }
  ],
  "post-processors": [
    [
      {
        "type": "docker-tag",
        "only": ["docker"],
        "force": "true",
        "repository": "us.gcr.io/gce-iotivity-ci/iotivity-linux",
        "tag": "latest"
      },
      {
        "type": "docker-push",
        "only": ["docker"],
        "login": "true",
        "login_email": "1234@5678.com",
        "login_username": "_json_key",
        "login_password": "{{ user `docker_password` }}",
        "login_server": "us.gcr.io"
      }
    ]
  ],
  "provisioners": [
    {
      "type": "shell",
      "only": ["googlecompute"],
      "scripts": [
        "scripts/baseline.sh",
        "scripts/sshd.sh",
        "scripts/jenkins-user-sshd.sh",
        "scripts/packages.sh",
        "scripts/shared-dependencies.sh",
        "scripts/android.sh",
        "scripts/arduino.sh",
        "scripts/tizen.sh",
        "scripts/cleanup.sh"
      ]
    },
    {
      "type": "shell",
      "only": ["docker"],
      "scripts": [
        "scripts/baseline.sh",
        "scripts/jenkins-user.sh",
        "scripts/packages.sh",
        "scripts/shared-dependencies.sh",
        "scripts/cleanup.sh"
      ]
    }
  ],
  "variables": {
    "docker_password": "{{ env `GCE_ACCOUNT_JSON` }}"
  }
}
